---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/es/faqs.json";
import features from "@data/es/features.json";
import pricing from "@data/es/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { getRelativeLocaleUrl } from "astro:i18n";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];

---

<MainLayout lang="es">
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explorar ScrewFast en GitHub"
    url="https://github.com/mearashadowfax/ScrewFast"
  />

  <HeroSection
    title=`Equipa tus proyectos con <span
        class="text-yellow-500 dark:text-yellow-400">ScrewFast</span>`
    subTitle="Herramientas de hardware de primera calidad y servicios de construcción expertos para cada necesidad del proyecto."
    primaryBtn="Comenzar a explorar"
    primaryBtnURL={getRelativeLocaleUrl("es", "products")}
    secondaryBtn="Contactar equipo de ventas"
    secondaryBtnURL={getRelativeLocaleUrl("es", "contact")}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`De más de <span class="font-bold">12.8k</span> reseñas`
    src={heroImage}
    alt="Pila de cajas de productos ScrewFast que contienen herramientas de hardware variadas"
  />

  <ClientsSection
    title="Confiado por líderes de la industria"
    subTitle="Experimenta la confiabilidad elegida por gigantes de la industria."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Cumpliendo con las demandas de la industria"
    subTitle="En ScrewFast, abordamos los desafíos únicos encontrados en los sectores de hardware y construcción. Desde herramientas de vanguardia hasta servicios expertos, estamos dedicados a ayudarte a superar obstáculos y lograr tus objetivos."
    src={featureImage}
    alt="Productos ScrewFast en cajas flotantes"
    features={features}
  />

  <FeaturesNavs
    title=`Personaliza las ofertas de <span class="text-yellow-500 dark:text-yellow-400">ScrewFast</span> para adaptarse perfectamente a tus necesidades de hardware y construcción.`
    tabs={[
      {
        heading: "Herramientas de vanguardia",
        content:
          "Potencia tus proyectos con las herramientas de vanguardia de ScrewFast. Experimenta mayor eficiencia en la gestión de construcción con nuestras sofisticadas soluciones automatizadas.",
        svg: "tools",
        src: tools,
        alt: "Equipo pesado amarillo y negro en campo de césped marrón",
        first: true,
      },
      {
        heading: "Paneles intuitivos",
        content:
          "Navega con facilidad usando los paneles intuitivos de ScrewFast. Configura y supervisa tus proyectos sin problemas, con interfaces amigables diseñadas para una gestión de flujo de trabajo rápida y efectiva.",
        svg: "dashboard",
        src: dashboard,
        alt: "Una captura de pantalla o representación gráfica del panel intuitivo",
        second: true,
      },
      {
        heading: "Características robustas",
        content:
          "Minimiza la complejidad, maximiza la productividad. Las características robustas de ScrewFast están diseñadas para optimizar tu proceso de construcción, entregando resultados que se destacan por su excelencia.",
        svg: "house",
        src: construction,
        alt: "Marco de edificio metálico gris cerca de grúa torre durante el día",
      },
    ]}
  />

  <TestimonialsSection
    title="Acelera tus proyectos"
    subTitle="En ScrewFast, aseguramos un inicio rápido con configuración instantánea de cuenta. Experimenta la velocidad de construcción redefinida."
    ;
    testimonials={[
      {
        content:
          "ScrewFast incrementó dramáticamente la eficiencia de nuestro proyecto. La configuración fue instantánea, y sus tiempos de respuesta rápidos son fenomenales. ¡Verdaderamente un cambio radical en el soporte de hardware y construcción!",
        author: "Samantha Ruiz",
        role: "Directora de Operaciones | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description:
          "clientes equipados — desde bricolaje hasta grandes empresas de construcción",
      },
      {
        count: "35%",
        description:
          "aumento en la eficiencia del proyecto con herramientas y servicios de ScrewFast",
      },
      {
        count: "15.3%",
        description:
          "reducción en costos de mantenimiento reportada por clientes a largo plazo",
      },
      {
        count: "2x",
        description: "ensamblaje más rápido usando soluciones de fijación innovadoras",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Preguntas<br />frecuentes" faqs={faqs} />

  <HeroSectionAlt
    title="Construyamos juntos"
    subTitle="ScrewFast es una plantilla de código abierto, meticulosamente elaborada con los frameworks Astro, Tailwind CSS y Preline UI."
    url="https://github.com/mearashadowfax/ScrewFast"
  />
</MainLayout>
