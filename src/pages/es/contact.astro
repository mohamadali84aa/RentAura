---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import contactData from "@data/es/contact.json";
import { SITE } from "@data/constants";

const pageTitle: string = `Contacto | ${SITE.title}`;
const metaDescription =
  "¿Tienes preguntas o quieres discutir un proyecto? Comunícate con nosotros y creemos juntos la solución perfecta con nuestras herramientas y servicios.";
const ogTitle = "Contáctanos | ScrewFast";
---

<MainLayout
  title={pageTitle}
  lang="es"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/es/contact",
    url: "https://screwfast.uk/es/contact",
    name: "Contáctanos | ScrewFast",
    description:
      "¿Tienes preguntas o quieres discutir un proyecto? Comunícate con nosotros y creemos juntos la solución perfecta con nuestras herramientas y servicios.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/es/",
      name: "ScrewFast",
      description:
        "ScrewFast ofrece herramientas de hardware de primera calidad y servicios de construcción expertos para satisfacer todas las necesidades de su proyecto.",
    },
    inLanguage: "es",
  }}
>
  <ContactSection contactData={contactData} />
</MainLayout>