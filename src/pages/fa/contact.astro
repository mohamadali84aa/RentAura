---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import contactData from "@data/fa/contact.json";
import { SITE } from "@data/constants";

const pageTitle: string = `تماس | ${SITE.title}`;
const metaDescription =
  "سوالی دارید یا می‌خواهید در مورد یک پروژه صحبت کنید؟ با ما تماس بگیرید و بیایید با ابزارها و خدمات ما راه‌حل کاملی ایجاد کنیم.";
const ogTitle = "تماس با ما | ScrewFast";
---

<MainLayout
  title={pageTitle}
  lang="fa"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/fa/contact",
    url: "https://screwfast.uk/fa/contact",
    name: "تماس با ما | ScrewFast",
    description:
      "سوالی دارید یا می‌خواهید در مورد یک پروژه صحبت کنید؟ با ما تماس بگیرید و بیایید با ابزارها و خدمات ما راه‌حل کاملی ایجاد کنیم.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/fa/",
      name: "ScrewFast",
      description:
        "ScrewFast ابزارهای سخت‌افزاری درجه یک و خدمات ساخت و ساز متخصص برای تمام نیازهای پروژه شما ارائه می‌دهد.",
    },
    inLanguage: "fa",
  }}
>
  <ContactSection contactData={contactData} />
</MainLayout>