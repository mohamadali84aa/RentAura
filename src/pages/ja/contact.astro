---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import contactData from "@data/ja/contact.json";
import { SITE } from "@data/constants";

const pageTitle: string = `お問い合わせ | ${SITE.title}`;
const metaDescription =
  "ご質問やプロジェクトについてご相談がございますか？お気軽にお問い合わせください。私たちのツールとサービスで完璧なソリューションを一緒に作成しましょう。";
const ogTitle = "お問い合わせ | ScrewFast";
---

<MainLayout
  title={pageTitle}
  lang="ja"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/ja/contact",
    url: "https://screwfast.uk/ja/contact",
    name: "お問い合わせ | ScrewFast",
    description:
      "ご質問やプロジェクトについてご相談がございますか？お気軽にお問い合わせください。私たちのツールとサービスで完璧なソリューションを一緒に作成しましょう。",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/ja/",
      name: "ScrewFast",
      description:
        "ScrewFastは、あらゆるプロジェクトニーズに対応する最高級のハードウェアツールと専門的な建設サービスを提供します。",
    },
    inLanguage: "ja",
  }}
>
  <ContactSection contactData={contactData} />
</MainLayout>