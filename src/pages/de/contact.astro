---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import contactData from "@data/de/contact.json";
import { SITE } from "@data/constants";

const pageTitle: string = `Kontakt | ${SITE.title}`;
const metaDescription =
  "Haben Sie Fragen oder möchten Sie ein Projekt besprechen? Kontaktieren Sie uns und lassen Sie uns gemeinsam die perfekte Lösung mit unseren Tools und Dienstleistungen entwickeln.";
const ogTitle = "Kontaktieren Sie uns | ScrewFast";
---

<MainLayout
  title={pageTitle}
  lang="de"
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/de/contact",
    url: "https://screwfast.uk/de/contact",
    name: "Kontaktieren Sie uns | ScrewFast",
    description:
      "Haben Sie Fragen oder möchten Sie ein Projekt besprechen? Kontaktieren Sie uns und lassen Sie uns gemeinsam die perfekte Lösung mit unseren Tools und Dienstleistungen entwickeln.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://screwfast.uk/de/",
      name: "ScrewFast",
      description:
        "ScrewFast bietet erstklassige Hardware-Tools und professionelle Bauleistungen für alle Ihre Projektanforderungen.",
    },
    inLanguage: "de",
  }}
>
  <ContactSection contactData={contactData} />
</MainLayout>